{
  "name": "beemo_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon -e ts --exec ts-node -r tsconfig-paths/register src/index.ts",
    "clean": "pnpm clean:bundles && del pnpm-lock.yaml **/node_modules && pnpm install",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "format:prisma": "npx prisma format --schema=./prisma/schema.prisma",
    "studio": "pnpm dlx prisma studio",
    "migrate:dev": "npx prisma migrate dev && npx prisma generate",
    "migrate:reset": "npx prisma migrate reset",
    "compose": "docker-compose up -d",
    "lint": "eslint --ext .ts src/ --fix",
    "getready": "pnpm install && pnpm compose && pnpm migrate:dev && pnpm studio",
    "eslint:view": "pnpm dlx eslint-flat-config-viewer",
    "test": "jest --coverage --verbose",
    "doc": "jsdoc -c jsdoc.conf.json "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.3.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.59.1",
    "add": "^2.0.6",
    "eslint": "8.0.1",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-flat-config-viewer": "0.1.3",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "2.0.4",
    "lint-staged": "13.2.2",
    "nodemon": "2.0.22",
    "prisma": "4.13.0",
    "prisma-docs-generator": "^0.8.0",
    "prisma-erd-generator": "^1.8.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@apollo/server": "4.7.0",
    "@graphql-tools/schema": "10.0.0",
    "@prisma/client": "4.13.0",
    "graphql": "16.6.0",
    "graphql-middleware": "6.1.35",
    "graphql-tag": "2.12.6",
    "jsonwebtoken": "9.0.1"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
