{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Como funciona el sistema de modulos
    "moduleResolution": "Node", // Como node resive los modulos
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "pretty": true,
    // "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@user/*": ["src/user/*"],
      "@tickets/*": ["src/tickets/*"],
      "@service/*": ["src/service/*"],
      "@radioStation/*": ["src/radioStation/*"],
      "@department/*": ["src/department/*"],
      "@shared/*": ["src/shared/*"],
      "@graphql/*": ["src/graphql/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
