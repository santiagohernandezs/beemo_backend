{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // Como funciona el sistema de modulos
    "moduleResolution": "Node", // Como node resive los modulos
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@user/*": ["src/user/*"],
      "@tickets/*": ["src/tickets/*"],
      "@service/*": ["src/service/*"],
      "@radioStation/*": ["src/radioStation/*"],
      "@department/*": ["src/department/*"],
      "@shared/*": ["src/shared/*"],
      "@graphql/*": ["src/graphql/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./utils/**/*.ts",
    "./prettier.config.js",
    "./typedoc.config.cjs",
    "./eslint.config.js",
    "./jest.config.js",
    "./test/**/*.ts",
    "./prisma/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
